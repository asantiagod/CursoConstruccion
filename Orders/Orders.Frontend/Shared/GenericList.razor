@typeparam Titem

@if(MyList is null)
{
    @if(Loading is null)
    {
        <div class="d-flex justify-content-center align-items-center">
            <img src="https://media.tenor.com/G7LfW0O5qb8AAAAi/loading-gif.gif" width=90  />
        </div>
    }
    else
    {
        @Loading
    }
}
else if(MyList.Count == 0)
{
    @if(NoRecords is null)
    {
        <p>No hay registros para mostrar...</p>
    }
    else
    {
        @NoRecords
    }
}
else
{
    @Body
}